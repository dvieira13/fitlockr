{
    "version": 2,
    "builds": [
        {
            "src": "client/vite.config.*",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "client/dist"
            }
        },
        {
            "src": "api/**/*.ts",
            "use": "@vercel/node"
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "/api/backend.ts"
        },
        {
            "src": "/(.*)",
            "dest": "client/dist/$1"
        }
    ]
}